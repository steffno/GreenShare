<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context=".ProfileFragment">


    <ImageView
        android:id="@+id/imgProfilo"
        android:layout_width="139dp"
        android:layout_height="113dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="583dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_outline_24" />

    <TextView
        android:id="@+id/textNome"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProfilo"
        android:layout_marginStart="108dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="488dp"
        android:background="@drawable/search_box"
        android:fontFamily="@font/noto_sans"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfilo" />

    <TextView
        android:id="@+id/textCognome"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNome"
        android:layout_marginStart="108dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="410dp"
        android:background="@drawable/search_box"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="24sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfilo"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonEsci"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="100dp"
        android:text="Esci"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCognome" />


</androidx.constraintlayout.widget.ConstraintLayout>
