<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002233"
    android:transitionName="anim1"
    tools:context=".ui.viaggio.InfoFragment">


    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Informazioni sul viaggio"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPartenzaInfo"
        android:layout_width="115dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textViewInfo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="620dp"
        android:layout_weight="1"
        android:text="Partenza"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="115dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textViewInfo"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="296dp"
        android:layout_weight="1"
        android:text="Tappe:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewTappe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPartenzaInfo1"
        app:layout_constraintVertical_bias="0.906" />

    <TextView
        android:id="@+id/textViewPartenzaInfo1"
        android:layout_width="115dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textViewInfo"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="576dp"
        android:layout_weight="1"
        android:text="Partenza"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPartenzaInfo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewDestinazioneInfo"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="630dp"
        android:layout_weight="1"
        android:text="Destinazione"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewDestinazioneInfo1"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="280dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="580dp"
        android:layout_weight="1"
        android:text="Destinazione"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDestinazioneInfo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintEnd_toStartOf="@+id/textViewDestinazioneInfo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewPartenzaInfo"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTappe"
        android:layout_width="360dp"
        android:layout_height="138dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPartenzaInfo1"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/textViewDataInfo"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="256dp"
        android:layout_weight="1"
        android:text="Partenza il"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTappe" />

    <TextView
        android:id="@+id/textViewOrarioInfo"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="Alle"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewDataInfo"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTappe" />

    <TextView
        android:id="@+id/textViewDataInfo1"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="256dp"
        android:layout_weight="1"
        android:text="Partenza il"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTappe" />

    <TextView
        android:id="@+id/textViewOrarioInfo1"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="Alle"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewDataInfo"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTappe" />

    <Button
        android:id="@+id/buttonPrenotaViaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="94dp"
        android:text="Prenota"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTappe"
        app:layout_constraintVertical_bias="0.923" />

</androidx.constraintlayout.widget.ConstraintLayout>